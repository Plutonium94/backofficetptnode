                if(idRowUpdate.length==0)
                {
                    $.ajax({
                        type: "POST",
                        url: "/scenario",
                        data: indexed_array,
                        dataType: "json",
                        success: function(scenario){
                            console.log("scenario save " + scenario);
                            if(typeof scenario !="undefined")
                            {
                                if(scenario.resultat==true)
                                {
                                    $("#contentOp").text("Scénario ajouté");
